@page "{searchString?}"
@model Emotify.Pages.Library.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="col-md-6">
    <form>
        <div class="form-group my-2">
            <label class="form-label" asp-for="SearchString"></label>
            <input class="form-control" asp-for="SearchString" />
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Filter" />
        </div>
    </form>
</div>
<hr />
<partial name="Emotes/_EmoteItemScripts"></partial>
<form method="post">
    @* <input class="btn btn-primary" type="submit" asp-page-handler="Copy" value="Save selected to my library" /> *@
    <div class="d-flex flex-row">
        <div class="d-flex align-content-start col-md-6 m-2 flex-wrap justify-content-center">
            <div class="section-header bg-primary p-2">Emotes</div>
            @foreach (var item in Model.Emotes.OrderBy(e => e.Name))
            {
                <partial name="Emotes/_EmoteItem" model="@item"></partial>
            }
        </div>
        <div class="d-flex align-content-start col-md-6 m-2 flex-wrap justify-content-center">
            <div class="section-header bg-primary p-2">Servers</div>
            @foreach (var server in Model.Guilds)
            {
                <partial name="_GuildItem" model="@server"></partial>
            }
        </div>
    </div>
</form>