@using Microsoft.AspNetCore.Identity
@using Emotify.Models
@using Emotify.Services
@inject UserHelper UserHelper

<ul class="navbar-nav">
@if (UserHelper.IsSignedIn(User))
{
    <li navigation-active-for="/Account/Manage/Index" class="nav-item">
        <a id="manage" class="nav-link" asp-page="/Account" title="Manage">Hello @UserHelper.GetDisplayName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-page="/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" id="login" asp-page="/Login" asp-route-returnUrl="@Context.Request.Path">Login with Discord</a>
    </li>
}
</ul>
